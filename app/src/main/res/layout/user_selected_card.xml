<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/greater_card_corner_radius"
    app:cardElevation="@dimen/greater_elevation"
    app:cardMaxElevation="@dimen/greater_elevation"
    app:cardPreventCornerOverlap="true"
    android:animateLayoutChanges="true"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:layout_gravity="center"
    android:focusable="true"
    android:layout_alignParentBottom="true"
    android:id="@+id/card"
    android:layout_margin="@dimen/very_small_margin"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textLayout"

            >
        <TextView
            android:id="@+id/fromKM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserratlight"
            android:textAppearance="@style/DarkTextAppearanceSmall"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size"
            android:text="4 kms"
            android:textStyle="bold"
            android:gravity="end"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="@dimen/very_small_margin"
            android:layout_marginTop="@dimen/very_small_margin"
            />

        <TextView
            android:id="@+id/fromLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserratlight"
            android:textAppearance="@style/DarkTextAppearanceSmall"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size"
            android:layout_below="@id/fromKM"
            android:text="from your Location"
            android:gravity="end"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="@dimen/very_small_margin"
            />
            <TextView
                android:id="@+id/travelTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratsemibold"
                android:textAppearance="@style/DarkTextAppearanceSmall"
                android:textColor="@color/black"
                android:textSize="@dimen/small_text_size"
                android:layout_below="@id/fromLocation"
                android:text="Travel time : "
                android:gravity="end"
                android:layout_marginTop="@dimen/very_small_margin"
                android:layout_alignParentRight="true"
                android:layout_marginHorizontal="@dimen/very_small_margin"
                />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/travelTime"
            android:layout_alignParentRight="true"

            >
            <LinearLayout
                android:id="@+id/startPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_toLeftOf="@id/endPlace"
                android:layout_marginHorizontal="@dimen/very_small_margin"
                >
                <ImageView
                    android:id="@+id/startTick"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/very_small_margin"
                    android:background="@drawable/done_grey"
                    />

                <TextView
                    android:id="@+id/start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratsemibold"
                    android:textAppearance="@style/DarkTextAppearanceSmall"
                    android:textColor="@color/white"
                    android:background="@drawable/blue_bg"
                    android:paddingHorizontal="@dimen/small_margin"
                    android:paddingVertical="@dimen/very_v_small_margin"
                    android:textSize="@dimen/very_small_text_size"
                    android:text="SP"
                    android:textAlignment="center"
                    android:layout_marginVertical="@dimen/very_small_margin"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/endPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginHorizontal="@dimen/very_small_margin"


                >
                <ImageView
                    android:id="@+id/endTick"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/very_small_margin"
                    android:background="@drawable/done_grey"
                    />

                <TextView
                    android:id="@+id/end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratsemibold"
                    android:textAppearance="@style/DarkTextAppearanceSmall"
                    android:textColor="@color/white"
                    android:background="@drawable/red_bg"
                    android:textSize="@dimen/very_small_text_size"
                    android:paddingHorizontal="@dimen/small_margin"
                    android:paddingVertical="@dimen/very_v_small_margin"
                    android:text="EP"
                    android:textAlignment="center"
                    android:layout_marginVertical="@dimen/very_small_margin"
                    />

        </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/leftLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:layout_margin="@dimen/very_small_margin"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/selectedPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fondy"
                android:textAppearance="@style/DarkTextAppearanceSmall"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text_size"
                android:text="@string/place"
                />

            <TextView
                android:id="@+id/selectedDistrict"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/selectedPlace"
                android:fontFamily="@font/montserratsemibold"
                android:textAppearance="@style/DarkTextAppearanceSmall"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/small_text_size"
                android:text="@string/place"
                />

        </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textLayout"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/bottomImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:background="@color/grey_500"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:padding="@dimen/small_margin"
                >
            <TextView
                android:id="@+id/hotelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratregular"
                android:textAppearance="@style/DarkTextAppearanceSmall"
                android:textColor="@color/black"
                android:textSize="@dimen/small_text_size"
                android:background="@drawable/transparent_background"
                android:text="@string/hotel_name"
                android:paddingHorizontal="@dimen/normal_margin"
                android:paddingVertical="@dimen/very_small_margin"
                android:layout_centerHorizontal="true"
                android:maxLines="1"
                android:ellipsize="end"
                />

            <TextView
                android:id="@+id/restlName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratregular"
                android:textAppearance="@style/DarkTextAppearanceSmall"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/small_margin"
                android:textSize="@dimen/small_text_size"
                android:background="@drawable/transparent_background"
                android:text="@string/luxury_restaurants"
                android:layout_below="@id/hotelName"
                android:paddingHorizontal="@dimen/normal_margin"
                android:paddingVertical="@dimen/very_small_margin"
                android:layout_centerHorizontal="true"
                android:maxLines="1"
                android:ellipsize="end"
                />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
