<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white_color"
    android:theme="@style/Theme.Design.NoActionBar">


    <LinearLayout
        android:id="@+id/linearSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/normal_margin"
        android:background="@color/white_color"
        android:paddingBottom="@dimen/large_margin"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/titilliumwebextralight"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:textSize="@dimen/small_text_size"
            android:text="@string/skip"
            android:layout_gravity="right"
            />

        <RelativeLayout
            android:id="@+id/relativeSignUp"
            android:layout_marginTop="@dimen/very_large_margin"
            android:layout_width="match_parent"
            android:layout_height="120dp">


            <View
                android:id="@+id/bar_signup_horizontal"
                android:layout_width="80dp"
                android:layout_height="4dp"
                android:background="@color/colorAccentScreen"
                android:layout_marginTop="@dimen/small_margin"
                />

            <TextView
                android:id="@+id/headingSignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/titilliumwebregular"
                android:text="@string/join_us"
                android:textAppearance="@style/DarkTextAppearanceMedium"
                android:textSize="@dimen/very_large_text_size"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/titilliumwebextralight"
                android:text="@string/experience_the_best"
                android:textAppearance="@style/DarkTextAppearanceSmall"
                android:textColor="@color/lightGrey"
                android:textSize="@dimen/small_text_size"
                android:layout_below="@id/headingSignup"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/inputFieldsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <android.support.design.widget.TextInputLayout
                android:id="@+id/firstNameSignUpLayout"
                style="@style/TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/lightGrey"
                android:layout_marginVertical="@dimen/small_margin"
                android:layout_alignParentTop="true"
                android:hint="@string/firstName">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/firstNameSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_gray"
                    android:textColorHint="@color/lightGrey"
                    android:fontFamily="@font/titilliumwebextralight"
                    android:inputType="text"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/secondNameSignUpLayout"
                style="@style/TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/lightGrey"
                android:layout_marginVertical="@dimen/small_margin"
                android:layout_below="@id/firstNameSignUpLayout"
                android:hint="@string/secondName">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/secondNameSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_gray"
                    android:textColorHint="@color/lightGrey"
                    android:fontFamily="@font/titilliumwebextralight"
                    android:inputType="text"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/EmailSignUpLayout"
                style="@style/TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/lightGrey"
                android:layout_marginVertical="@dimen/small_margin"
                android:layout_below="@id/secondNameSignUpLayout"
                android:hint="@string/Email">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/emailSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/dark_gray"
                    android:fontFamily="@font/titilliumwebextralight"
                    android:textColorHint="@color/lightGrey"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/passwordSignUpLayout"
                style="@style/TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/lightGrey"
                android:layout_below="@id/EmailSignUpLayout"
                android:fontFamily="@font/titilliumwebextralight"
                android:hint="@string/password"
                android:layout_marginVertical="@dimen/small_margin"
                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/passwordSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/titilliumwebextralight"
                    android:inputType="textPassword"
                    android:textColor="@color/dark_gray"
                    android:textColorHint="@color/lightGrey" />
            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/titilliumwebextralight"
                android:textAppearance="@style/DarkTextAppearanceSmall"
                android:textColor="@color/lightGrey"
                android:textSize="@dimen/normal_text_size"
                android:text="Which type of traveler you are?"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                />

            <org.angmarch.views.NiceSpinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                app:arrowDrawable="@drawable/ic_expand_more_black_24dp"
                app:arrowTint="@color/dark_gray"
                android:layout_marginVertical="@dimen/small_margin"
                app:textTint="@color/dark_gray"
                android:background="@drawable/text_view_background"
                app:dropDownListPaddingBottom="@dimen/large_margin"
                android:textAlignment="textStart"
                android:fontFamily="@font/titilliumwebregular"
                app:fontFamily="@font/titilliumwebregular"
                />

            <TextView
                android:id="@+id/or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/titilliumwebextralight"
                android:textAppearance="@style/DarkTextAppearanceSmall"
                android:textColor="@color/lightGrey"
                android:textSize="@dimen/text_size_16"
                android:text="-OR-"
                android:textStyle="normal"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/spinner"
                android:layout_marginBottom="@dimen/normal_margin"
                />
            <include
                android:id="@+id/thirdPartyLayout"
                android:layout_below="@id/or"
                android:layout_centerHorizontal="true"
                layout="@layout/third_party_service_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>
        <Button
            android:id="@+id/signUpButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/titilliumwebregular"
            android:background="@drawable/signup_button_bg_1"
            android:text="@string/get_started"
            android:layout_marginVertical="@dimen/normal_margin"
            android:gravity="center"
            android:layout_gravity="bottom"
            />
    </LinearLayout>

</ScrollView>