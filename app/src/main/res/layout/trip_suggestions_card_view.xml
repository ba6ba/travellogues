<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white_color"
    app:cardCornerRadius="0dp"
    app:cardElevation="@dimen/greater_elevation"
    app:cardMaxElevation="@dimen/greater_elevation"
    app:cardPreventCornerOverlap="true"
    android:animateLayoutChanges="true"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:layout_margin="@dimen/very_small_margin"
    android:id="@+id/cardSuggest">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_color"
        android:animateLayoutChanges="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageLayout"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mainImageSuggest"
                android:scaleType="centerCrop"
                android:fadingEdge="horizontal"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/price_tag_background_reverse"
                android:gravity="center"
                android:paddingHorizontal="@dimen/very_small_margin"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                >

                <TextView
                    android:id="@+id/priceTag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/small_text_size"
                    android:fontFamily="@font/titilliumwebregular"
                    android:lineSpacingExtra="-2dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:maxLines="1"
                    android:padding="@dimen/small_margin"
                    android:layout_gravity="center"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:text="@string/price"
                    />

            </LinearLayout>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/favourite"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/very_v_small_margin"
                android:layout_marginRight="@dimen/very_v_small_margin"
                android:background="@drawable/favourite_bg"
                android:backgroundTintMode="screen"
                android:backgroundTint="@color/transparent"
                android:src="@drawable/ic_favorite_border_black_24dp"
                android:padding="@dimen/very_small_margin"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/small_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_alignParentBottom="true"
            >
            <TextView
                android:id="@+id/planTripPlaceNameSuggest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_color"
                android:textSize="@dimen/normal_text_size"
                android:fontFamily="@font/titilliumwebregular"
                android:layout_alignParentTop="true"
                android:textAllCaps="false"
                android:lineSpacingExtra="-2dp"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:maxLines="1"
                android:elevation="@dimen/greater_elevation"
                android:ellipsize="end"
                android:layout_alignParentStart="true"
                />

            <com.iarcuschin.simpleratingbar.SimpleRatingBar
                android:id="@+id/planTripRatingBarSuggest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srb_starSize="@dimen/small_rating_stars_size"
                android:soundEffectsEnabled="true"
                android:theme="@style/RatingBar"
                app:srb_numberOfStars="5"
                app:srb_rating="5"
                app:srb_starsSeparation="2dp"
                app:srb_isIndicator="true"
                app:srb_stepSize="1.0"
                app:srb_pressedFillColor="@color/lightGrey"
                app:srb_pressedBorderColor="@color/lightGrey"
                app:srb_borderColor="@color/white_color"
                app:srb_fillColor="@color/white_color"
                android:layout_below="@id/planTripPlaceNameSuggest"
                android:layout_alignParentStart="true"
                android:layout_marginTop="2dp"
                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/checkedLayout"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white_color"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:gravity="center"
            android:animateLayoutChanges="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotation="90"
                android:text="@string/selected"
                android:textSize="@dimen/small_text_size"
                android:textAppearance="@style/DarkTextAppearanceMedium"
                android:gravity="center"
                />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>