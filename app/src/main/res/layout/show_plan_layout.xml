<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teee"
            android:text="TOUR PLAN"
            android:fontFamily="@font/montserratblack"
            android:textSize="@dimen/large_margin"
            android:textColor="@color/black"
            android:layout_marginHorizontal="@dimen/above_normal_margin"
            android:layout_marginVertical="@dimen/small_margin"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/teee"
            >
        <TableLayout
            android:id="@+id/tableInvoices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:theme="@style/MainActivityTheme"
            android:nestedScrollingEnabled="true"
            android:padding="@dimen/above_normal_margin"
            >

        </TableLayout>
        </ScrollView>
        </RelativeLayout>
    </ScrollView>
