<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_gravity="center"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/headerImage"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/lightGrey"
        />

    <RelativeLayout
        android:id="@+id/deluxe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        >

        <TextView
            android:id="@+id/deluxeRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold"
            android:fontFamily="@font/montserratbold"
            android:textAllCaps="false"
            android:text="Deluxe Room"
            android:layout_alignParentStart="true"
            android:layout_marginHorizontal="@dimen/very_v_small_margin"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_500"
            android:textSize="@dimen/small_text_size"
            android:textStyle="bold"
            android:fontFamily="@font/montserratlight"
            android:textAllCaps="false"
            android:text="for 2 persons"
            android:layout_marginHorizontal="@dimen/very_v_small_margin"
            android:layout_below="@+id/deluxeRoom"
            />
        <ImageView
            android:id="@+id/deluxeCheck"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@color/grey_200"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_done_black_24dp"
            android:padding="@dimen/very_v_small_margin"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/luxury"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        >

        <TextView
            android:id="@+id/luxuryRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold"
            android:fontFamily="@font/montserratbold"
            android:textAllCaps="false"
            android:text="Luxury Room"
            android:layout_alignParentStart="true"
            android:layout_marginHorizontal="@dimen/very_v_small_margin"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_500"
            android:textSize="@dimen/small_text_size"
            android:textStyle="bold"
            android:fontFamily="@font/montserratlight"
            android:textAllCaps="false"
            android:text="for 4 persons"
            android:layout_marginHorizontal="@dimen/very_v_small_margin"
            android:layout_below="@+id/luxuryRoom"
            />
        <ImageView
            android:id="@+id/luxuryCheck"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@color/grey_200"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_done_black_24dp"
            android:padding="@dimen/very_v_small_margin"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/economical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        >

        <TextView
            android:id="@+id/economicalRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold"
            android:fontFamily="@font/montserratbold"
            android:textAllCaps="false"
            android:text="Economical Room"
            android:layout_alignParentStart="true"
            android:layout_marginHorizontal="@dimen/very_v_small_margin"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_500"
            android:textSize="@dimen/small_text_size"
            android:textStyle="bold"
            android:fontFamily="@font/montserratlight"
            android:textAllCaps="false"
            android:text="for 5 persons"
            android:layout_marginHorizontal="@dimen/very_v_small_margin"
            android:layout_below="@+id/economicalRoom"
            />
        <ImageView
            android:id="@+id/economicalCheck"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@color/grey_200"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_done_black_24dp"
            android:padding="@dimen/very_v_small_margin"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/guests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/adultsQty"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_text_size"
            android:textStyle="bold"
            android:fontFamily="@font/montserratbold"
            android:text="4"
            android:layout_alignParentStart="true"
            android:background="@drawable/circle"
            android:textAlignment="center"
            android:layout_marginHorizontal="@dimen/very_v_small_margin"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/adults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold"
            android:fontFamily="@font/montserratlight"
            android:textAllCaps="false"
            android:lineSpacingExtra="1dp"
            android:text="Adults"
            android:gravity="end"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/adultsQty"
            android:layout_marginHorizontal="@dimen/very_v_small_margin" />

        <TextView
            android:id="@+id/childsQty"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_text_size"
            android:textStyle="bold"
            android:fontFamily="@font/montserratbold"
            android:text="4"
            android:layout_alignParentStart="true"
            android:background="@drawable/circle_1"
            android:textAlignment="center"
            android:layout_marginHorizontal="@dimen/very_v_small_margin"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/childs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold"
            android:fontFamily="@font/montserratlight"
            android:textAllCaps="false"
            android:lineSpacingExtra="1dp"
            android:text="Childrens"
            android:gravity="end"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/adultsQty"
            android:layout_marginHorizontal="@dimen/very_v_small_margin"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />

    </LinearLayout>

</LinearLayout>