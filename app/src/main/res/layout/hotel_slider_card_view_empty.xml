<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white_color"
    app:cardMaxElevation="@dimen/layout_elevation"
    app:cardElevation="@dimen/layout_elevation"
    app:cardCornerRadius="@dimen/card_corner_radius"
    android:layout_centerHorizontal="true"
    android:layout_marginHorizontal="@dimen/small_margin"
    android:elevation="@dimen/layout_elevation"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nothing_to_show"
            android:textAppearance="@style/DarkTextAppearanceMedium"
            android:textSize="@dimen/text_size_26p"
            android:textColor="@color/bronzeBlueScreen"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>