<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:layout_gravity="center"
    android:gravity="center"
    android:backgroundTint="@color/black"
    android:backgroundTintMode="screen"
    android:layout_margin="@dimen/small_margin">

    <ProgressBar
        android:id="@+id/progress_wheel"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginHorizontal="@dimen/very_small_margin"
        android:layout_marginVertical="@dimen/medium_margin"
        android:layout_centerHorizontal="true"
        android:indeterminateTint="@color/colorAccentScreen"/>

    <TextView android:id="@+id/please_wait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_wheel"
        android:text="Working on it..."
        android:layout_marginRight="@dimen/normal_margin"
        android:fontFamily="@font/titilliumwebregular"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:paddingHorizontal="@dimen/small_margin"
        android:paddingVertical="@dimen/medium_margin"
        android:layout_toRightOf="@id/progress_wheel"
        android:textColor="@color/white_color"/>

</RelativeLayout>
