<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white_color"
    app:cardCornerRadius="0dp"
    app:cardElevation="@dimen/greater_elevation"
    app:cardMaxElevation="@dimen/greater_elevation"
    app:cardPreventCornerOverlap="true"
    android:animateLayoutChanges="true"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:layout_margin="@dimen/very_small_margin"
    android:id="@+id/cabsCard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_color"
        android:animateLayoutChanges="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/cabsImageLayout"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cabsMainImage"
                android:scaleType="centerCrop"
                />

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="15dp"
                android:background="@drawable/tag_background_cabs"
                android:gravity="center"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                >

                <TextView
                    android:id="@+id/cabsTag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/very_small_text_size"
                    android:fontFamily="@font/titilliumwebregular"
                    android:lineSpacingExtra="-2dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:maxLines="1"
                    android:layout_gravity="center"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:text="@string/New"
                    />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/small_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_alignParentBottom="true"
            >
            <TextView
                android:id="@+id/planTripCabName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text_size"
                android:fontFamily="@font/titilliumwebregular"
                android:textAllCaps="false"
                android:lineSpacingExtra="-2dp"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:id="@+id/planTripCabPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/small_text_size"
                android:fontFamily="@font/titilliumwebregular"
                android:textAllCaps="false"
                android:layout_below="@id/planTripCabName"
                android:textStyle="normal"
                android:textAlignment="textStart"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:id="@+id/planTripCabDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/progressLoaderScreen"
                android:textSize="@dimen/small_text_size"
                android:fontFamily="@font/titilliumwebregular"
                android:textAllCaps="false"
                android:layout_below="@id/planTripCabPrice"
                android:textStyle="normal"
                android:textAlignment="textStart"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="@dimen/very_small_margin"
                />
            <com.iarcuschin.simpleratingbar.SimpleRatingBar
                android:id="@+id/planTripCabRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srb_starSize="@dimen/v_small_rating_stars_size"
                android:soundEffectsEnabled="true"
                android:theme="@style/RatingBar"
                app:srb_numberOfStars="5"
                app:srb_rating="5"
                app:srb_starsSeparation="2dp"
                app:srb_stepSize="1.0"
                app:srb_isIndicator="true"
                app:srb_pressedFillColor="@color/lightGrey"
                app:srb_pressedBorderColor="@color/lightGrey"
                app:srb_fillColor="@color/progressLoaderScreen"
                app:srb_borderColor="@color/progressLoaderScreen"
                android:layout_below="@id/planTripCabPrice"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/normal_margin"
                />


            <ImageView
                android:id="@+id/cabsCheckId"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_check_circle_black_24dp"
                android:backgroundTint="@color/lightGrey"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_alignBottom="@id/planTripCabRatingBar"
                />
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>