<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/facebookColor"
    android:padding="@dimen/small_margin"
    android:layout_margin="@dimen/normal_margin"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/luxury"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/near_restaurant"
        android:textAppearance="@style/DarkTextAppearanceMedium"
        android:drawableEnd="@drawable/ic_check_circle_accent_24dp"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/small_margin"
        android:background="@color/white_color"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/economic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/near_restaurant"
        android:textAppearance="@style/DarkTextAppearanceMedium"
        android:drawableEnd="@drawable/ic_check_circle_accent_24dp"
        android:layout_below="@id/luxury"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:background="@color/white_color"
        android:padding="@dimen/small_margin"
        />
</RelativeLayout>