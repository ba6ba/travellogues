<resources xmlns:android="http://schemas.android.com/tools" xmlns:tools="urn:oasis:names:tc:xliff:document:1.2">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/white_color</item>
        <item name="colorAccent">@color/darkGrey</item>
    </style>

    <style name="UserInfoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lightGrey</item>
        <item name="colorPrimaryDark">@color/white_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="RatingBar" parent="android:style/Widget.Material.RatingBar.Small">

        <item name="colorControlNormal">@color/lightestGrey</item>
        <item name="colorControlActivated" android:state_selected="true">@null</item>
        <item name="colorControlHighlight">@color/white_color</item>
        <item name="android:isIndicator">true</item>
        <item name="android:colorControlActivated" tools:ignore="NewApi">@color/white_color</item>

    </style>

    <style name="RatingBarDark" parent="android:style/Widget.Material.RatingBar.Small">

        <item name="colorControlNormal">@color/white_color</item>
        <item name="colorControlActivated" android:state_selected="true">@null</item>
        <item name="colorControlHighlight">@color/iconColor</item>
        <item name="android:colorControlActivated" tools:ignore="NewApi">@color/iconColor</item>
        <item name="android:maxHeight">12dp</item>
        <item name="android:isIndicator">true</item>
        <item name="android:maxWidth">12dp</item>

    </style>

    <style name="TabTextApperance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:fontFamily">@font/titilliumwebregular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>

    </style>

    <style name="BookingActivityTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorPrimary">@color/white_color</item>
        <item name="android:colorAccent">@color/white_color</item>
        <item name="android:colorPrimaryDark">@color/white_color</item>
    </style>

    <style name="ToolbarTitleTextAppearance">
        <item name="android:fontFamily">@font/titilliumwebregular</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="NormalTextAppearance">
        <item name="android:fontFamily">@font/titilliumwebregular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white_color</item>
    </style>

    <style name="DarkTextAppearance">
        <item name="android:fontFamily">@font/titilliumwebregular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_26p</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="DarkTextAppearanceMedium">
        <item name="android:fontFamily">@font/titilliumwebregular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="DarkTextAppearanceSmall">
        <item name="android:fontFamily">@font/titilliumwebextralight</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="LightTextAppearanceSmall">
        <item name="android:fontFamily">@font/titilliumwebregular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/white_color</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textAlignment">center</item>

    </style>
    <style name="FabMargin">
        <item name="android:layout_margin">@dimen/small_margin</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox
        </item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="boxCollapsedPaddingTop">0dp</item>
    </style>

    <style name="Widget.Shrine.TextInputLayout.Dense" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="hintTextAppearance">@style/TextAppearance.Shrine.TextInputLayout.HintText</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:strokeColor" tools:ignore="NewApi">@color/lightGrey</item>
        <item name="boxStrokeColor">@null</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Shrine.TextInputLayout.HintText</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:strokeColor" tools:ignore="NewApi">@color/lightGrey</item>
        <item name="boxStrokeColor">@color/lightGrey</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>


    <style name="HintText">
        <item name="android:textSize">@dimen/very_small_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/titilliumwebextralight</item>
    </style>

    <style name="HelperText">
        <item name="android:textSize">@dimen/very_small_text_size</item>
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:fontFamily">@font/titilliumwebextralight</item>
    </style>

    <style name="TextAppearance.Shrine.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:labelTextSize">@dimen/very_small_text_size</item>
        <item name="android:fontFamily">@font/titilliumwebextralight</item>
    </style>

</resources>
